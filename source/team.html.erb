
<div class="text-center padded">
  <h1>Our Team</h1>

  <ul class="list-inline text-center">
    <div class="container">
      <div class="row">

        <% ["anne", "seb", "romain"].each do |member| %>
          <li class="col-xs-6 col-sm-4">
            <%= image_tag "#{member}.jpg", class: "img-circle", height: "100", width: "100" %>
            <h3><%= member.capitalize %></h3>
          </li>
        <% end %>
      </div>
    </div>
  </ul>

  <% link_to "mailto:contact@airbnb.com"  do  %>
    <i class="fa fa-envelope">contact@airbnb.com</i>
  <% end %>

  <div class="padded"></div>


 </div>
